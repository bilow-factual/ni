#define _POSIX_C_SOURCE 200112L
#define _XOPEN_SOURCE   600
#define _ISOC99_SOURCE

#define EXIT_NORMAL       0
#define EXIT_USER_ERROR   1
#define EXIT_SYSTEM_ERROR 2

#include <stdio.h>
#include <stdlib.h>

#define die(...) \
  do { \
    fprintf(stderr, "ni: " __VA_ARGS__); \
    exit(EXIT_SYSTEM_ERROR); \
  } while (0)

#define warn(...) \
  do { \
    fprintf(stderr, "ni: " __VA_ARGS__); \
  } while (0)
