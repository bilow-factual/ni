#!/bin/bash
cd $(dirname $0)/..
rm -rf tests
mkdir tests
for file in $(find doc -name '*.md' -type f); do
  echo "test: generating transcript for $file" >&2
  dir=$(dirname $file)
  mkdir -p tests/${dir#doc}
  perl -ne 'print if (/^\`{3}bash$/../^\`{3}$/) && !/^\`/' $file \
    > tests/${file#doc/}.transcript
done
